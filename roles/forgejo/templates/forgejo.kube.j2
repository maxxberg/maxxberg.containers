---
apiVersion: v1
kind: Deployment
metadata:
  annotations:
    io.containers.autoupdate: registry
  name: {{ project_name }}
  labels:
    app: {{ project_name }}
spec:
  selector:
    matchLabels:
      app: {{ project_name }}
  template:
    metadata:
      labels:
        app: {{ project_name }}
        traefik.enable: "true"
        traefik.http.services.{{ project_name }}-sec.loadbalancer.server.port: "80"
        traefik.http.routers.{{ project_name }}-sec.rule: Host(`{{ domain | mandatory }}`)
        traefik.docker.network: web_backend
        traefik.http.routers.{{ project_name }}-sec.tls: "true"
        traefik.http.routers.{{ project_name }}-sec.tls.certResolver: letsdns
        traefik.http.routers.{{ project_name }}-sec.middlewares: security_headers@file
        traefik.http.routers.{{ project_name }}.rule: Host(`{{ domain }}`)
        traefik.http.routers.{{ project_name }}.middlewares: redirect-to-https@file
      name: {{ project_name }}
    spec:
      containers:
        - name: git
          image: "codeberg.org/forgejo/forgejo:12"
          envFrom:
            - configMapRef:
                name: {{ project_name }}-env
            - secretRef:
                name: {{ project_name }}_secrets
          volumeMounts:
            - mountPath: /data
              name: data
            - mountPath: /etc/timezone
              name: timezone
              readonly:true
            - mountPath: /etc/localtime
              name: localtime
              readonly: true
      volumes:
        - name: timezone
          hostPath:
            path: /etc/timezone
            type: File
        - name: localtime
          hostPath:
            path: /etc/localtime
            type: File
        - name: data
          persistentVolumeClaim:
            claimName: {{ project_name }}-data

---
apiVersion: v1
kind: Deployment
metadata:
  annotations:
    io.containers.autoupdate: registry
  name: {{ project_name }}
  labels:
    app: {{ project_name }}
spec:
  selector:
    matchLabels:
      app: {{ project_name }}
  template:
    metadata:
      labels:
        app: {{ project_name }}
        traefik.enable: "true"
        traefik.http.services.{{ project_name }}-sec.loadbalancer.server.port: "3000"
        traefik.http.routers.{{ project_name }}-sec.rule: Host(`{{ domain | mandatory }}`)
        traefik.docker.network: web_backend
        traefik.http.routers.{{ project_name }}-sec.tls: "true"
        traefik.http.routers.{{ project_name }}-sec.tls.certResolver: letsdns
        traefik.http.routers.{{ project_name }}-sec.middlewares: security_headers@file
        traefik.http.routers.{{ project_name }}.rule: Host(`{{ domain }}`)
        traefik.http.routers.{{ project_name }}.middlewares: redirect-to-https@file
      name: {{ project_name }}
    spec:
      containers:
        - name: hedgedoc
          image: "lscr.io/linuxserver/hedgedoc:{{ hedgedoc_version | default('latest') }}"
          envFrom:
            - configMapRef:
                name: {{ project_name }}-env
            - secretRef:
                name: {{ project_name }}_secrets
          volumeMounts:
            - mountPath: /config
              name: config
            - mountPath: /public/uploads
              name: uploads
      volumes:
        - name: config
          persistentVolumeClaim:
            claimName: {{ project_name }}-config
        - name: uploads
          persistentVolumeClaim:
            claimName: {{ project_name }}-uploads

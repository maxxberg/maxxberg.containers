---
apiVersion: v1
kind: Deployment
metadata:
  annotations:
    io.containers.autoupdate: registry
  name: {{ project_name }}
  labels:
    app: {{ project_name }}
spec:
  selector:
    matchLabels:
      app: {{ project_name }}
  template:
    metadata:
      labels:
        app: {{ project_name }}
        traefik.enable: true
        traefik.http.services.grocy-sec.loadbalancer.server.port: 80
        traefik.http.routers.grocy-sec.rule: Host(`{{ grocy_domain | mandatory }}`)
        traefik.docker.network: web_backend
        traefik.http.routers.grocy-sec.tls: true
        traefik.http.routers.grocy-sec.tls.certResolver: letsdns
        traefik.http.routers.grocy.rule: Host(`{{ grocy_domain }}`)
        traefik.http.routers.grocy.middlewares: redirect-to-https@file
        traefik.http.routers.grocy-sec.middlewares: security_headers@file
      name: {{ project_name }}
    spec:
      containers:
        - name: grocy
          image: "lscr.io/linuxserver/grocy:{{ grocy_image_tag | default('latest') }}"
          volumeMounts:
            - mountPath: /config
              name: grocy-config
      volumes:
        - name: grocy-config
          persistentVolumeClaim:
            claimName: {{ project_name }}-config
